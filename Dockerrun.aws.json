{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "essential": true,
      "links": [
        "mongodb"
      ],
      "name": "app",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 80
        }
      ]
    },
    {
      "essential": true,
      "image": "mongo",
      "mountPoints": [
        {
          "containerPath": "/data/db",
          "sourceVolume": "_Data"
        }
      ],
      "name": "mongodb",
      "portMappings": [
        {
          "containerPort": 27017,
          "hostPort": 27017
        }
      ]
    }
  ],
  "family": "books-app",
  "volumes": [
    {
      "host": {
        "sourcePath": "./data"
      },
      "name": "_Data"
    }
  ]

}